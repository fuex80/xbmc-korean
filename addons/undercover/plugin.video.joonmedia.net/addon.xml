<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.joonmedia.net"
       name="JoonMedia"
       version="1.7.3"
       provider-name="XBMC-Korea">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.xbmcswift2" version="2.4.0"/>
    <import addon="script.module.beautifulsoup" version="3.2.1"/>
    <import addon="script.module.youtube.dl" version="14.519.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">JoonMedia Streaming Service</summary>
    <summary lang="ko">준미디어 비디오 스트리밍 서비스</summary>
    <description lang="en">Watch Korean movie/series in joonmedia.net</description>
    <description lang="ko">준미디어(joonmedia.net)에서 제공하는 한국 영화/드라마등을 볼 수 있습니다</description>
    <platform>all</platform>
  </extension>
</addon>
