<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.m.gomtv.com"
       name="GomTV Mobile"
       version="0.2.0"
       provider-name="XBMC-Korea">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
    <import addon="script.module.beautifulsoup" version="3.0.8"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">GomTV Mobile</summary>
    <summary lang="ko">곰티비 모바일</summary>
    <description lang="en">Watch Korean movie, game broadcast and music video provided in m.gomtv.com, Mobile site of gomtv.com</description>
    <description lang="ko">곰티비 모바일(m.gomtv.com) 에서 제공되는 영화, 게임중계, 뮤직비디오등을 볼수 있습니다</description>
    <platform>all</platform>
  </extension>
</addon>
