<!-- Aeon MQ 4 -->

<window id="2005">
    <onload>Skin.Reset(trailermode)</onload>
  <controls>
  
  <!-- Codec Info -->
  <control type="group">
  <posx>0</posx>
  <posy>0</posy>
  <width>1280</width>
  <height>125</height>
  <animation type="Visible">
    <effect type="fade" time="400" start="0" end="100" />
    <effect type="slide" time="400" start="0,-125" end="0,0" easing="out" tween="cubic" />
  </animation>
  <animation type="Hidden">
    <effect type="fade" time="400" start="100" end="0" />
    <effect type="slide" time="400" start="0,0" end="0,-125" easing="in" tween="cubic" />
  </animation>
  <animation type="WindowOpen">
    <effect type="fade" time="400" start="0" end="100" />
    <effect type="slide" time="400" start="0,-125" end="0,0" easing="out" tween="cubic" />
  </animation>
  <animation type="WindowClose">
    <effect type="fade" time="400" start="100" end="0" />
    <effect type="slide" time="400" start="0,0" end="0,-125" easing="in" tween="cubic" />
  </animation>
  <control type="image">
    <posx>0</posx>
    <posy>0</posy>
    <width>1280</width>
    <height>350</height>
    <texture background="true">osd_largebar_top.png</texture>
    <visible>VideoPlayer.Content(LiveTV)</visible>
  </control>
  <control type="image">
    <posx>0</posx>
    <posy>0</posy>
    <width>1280</width>
    <height>125</height>
    <texture background="true">osd_largebar_top.png</texture>
    <visible>!VideoPlayer.Content(LiveTV)</visible>
  </control>
  <control type="label" id="10">
