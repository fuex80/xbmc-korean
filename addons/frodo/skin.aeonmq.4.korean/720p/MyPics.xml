<!-- Aeon MQ 4 -->

<window id="2">
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<views>50,53,581</views>
	<controls>
	
	<control type="multiimage"><!-- Fanart -->
    <include>FullScreenDimensions</include>
		<timeperimage>6000</timeperimage>
		<randomize>true</randomize>
		<fadetime>FanartCrossFadeTime</fadetime>
		<aspectratio>keep</aspectratio>
		<animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(animationpics_panscan)">Conditional</animation>
		<animation effect="slide" start="-10,-10" end="10,10" time="5000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(animationpics_panscan)">Conditional</animation>
		<animation effect="slide" start="1280,0" end="0,0" time="500" tween="cubic" easing="out" reversible="false" condition="Skin.HasSetting(animationpics_slide) + Control.IsVisible(110)">Conditional</animation>
		<animation effect="slide" start="-1280,0" end="0,0" time="500" tween="cubic" easing="out" reversible="false" condition="Skin.HasSetting(animationpics_slide) + Control.IsVisible(111)">Conditional</animation>
    <imagepath background="true" fallback="special://skin/backgrounds/default.jpg">$INFO[ListItem.filenameandpath]</imagepath>
  </control>
  <control type="multiimage"><!-- Fanart -->
    <include>FullScreenDimensions</include>
		<timeperimage>6000</timeperimage>
		<randomize>true</randomize>
		<fadetime>FanartCrossFadeTime</fadetime>
		<aspectratio>keep</aspectratio>
		<animation effect="slide" start="0,0" end="-1280,0" time="500" tween="cubic" easing="out" reversible="false" condition="Control.IsVisible(110)">Conditional</animation>
    <imagepath background="true" fallback="special://skin/backgrounds/default.jpg">$INFO[ListItem.filenameandpath]</imagepath>
    <visible>Skin.HasSetting(animationpics_slide)</visible>
  </control>
  <control type="multiimage"><!-- Fanart -->
    <include>FullScreenDimensions</include>
		<timeperimage>6000</timeperimage>
		<randomize>true</randomize>
		<fadetime>FanartCrossFadeTime</fadetime>
		<aspectratio>keep</aspectratio>
		<animation effect="slide" start="0,0" end="1280,0" time="500" tween="cubic" easing="out" reversible="false" condition="Control.IsVisible(111)">Conditional</animation>
    <imagepath background="true" fallback="special://skin/backgrounds/default.jpg">$INFO[ListItem.filenameandpath]</imagepath>
    <visible>Skin.HasSetting(animationpics_slide)</visible>
  </control>
  <control type="image" id="110"><!-- to slide fanart -->
    <include>InvisibleButton</include>
    <visible>!Container.OnNext</visible>
    <animation effect="fade" start="0" end="100" time="150" condition="true">Visible</animation>
  </control>
  <control type="image" id="111"><!-- to slide fanart -->
    <include>InvisibleButton</include>
    <visible>!Container.OnPrevious</visible>
    <animation effect="fade" start="0" end="100" time="150" condition="true">Visible</animation>
  </control>
  <control type="image" id="105">
    <include>InvisibleButton</include>
    <visible>Control.HasFocus(581) + Control.IsVisible(668) + ![Skin.HasSetting(nophotoshowhide) | Control.IsVisible(66) | Container(581).OnNext | Container(581).OnPrevious]</visible>
    <animation effect="fade" start="0" end="100" time="150" delay="3000">Visible</animation>
  </control>
  <control type="button" id="9900"><!-- to menu/kiosk condition -->
    <include>InvisibleButton</include>
    <onfocus condition="![Skin.HasSetting(kiosk) | Skin.HasSetting(kiosksmart) + !SubString(skin.string(codestep),step3)]">SetFocus(9300)</onfocus>
    <onfocus condition="Skin.HasSetting(kiosksmart) + !SubString(skin.string(codestep),step3)">SetFocus(9100)</onfocus>
    <onfocus condition="Skin.HasSetting(kiosk) + IsEmpty(ListItem.Trailer)">SetFocus(50)</onfocus>
    <onfocus condition="Skin.HasSetting(kiosk) + !IsEmpty(ListItem.Trailer)">SetFocus(90000)</onfocus>
  </control>
  <control type="button" id="9910"><!-- panel focus -->
    <include>InvisibleButton</include>
    <onleft>SetFocus(50)</onleft>
    <onright>SetFocus(50)</onright>
    <onup>SetFocus(9900)</onup>
    <ondown>SetFocus(50)</ondown>
  </control>
  <control type="button" id="9920"><!-- hidden colection/view fanart -->
    <include>InvisibleButton</include>
    <onleft>SetFocus(50)</onleft>
    <onright>SetFocus(50)</onright>
    <onup>SetFocus(50)</onup>
    <ondown>SetFocus(50)</ondown>
  </control>
  <control type="group">
    <include>Animation_OpenCloseZoom</include>
    <include>ViewList</include><!-- 50 -->
    <include>ViewWall</include><!-- 53 -->
    <include>ViewPhotoShow</include><!-- 581 -->
    <include condition="Skin.HasSetting(nowplayingwidget)">NowPlayingWidget</include>
    <include condition="!Skin.HasSetting(noscrollletters)">ScrollOffsetLabel</include>
    <include>FloorText</include>
    <include>TopMenu_BGBlack</include>
    <include>TopMenu_Pics</include>
	</control>
  <include>BGBlack</include>
  <include>BGGradient</include>
	</controls>
</window>