    <posy>-20</posy>
    <width>24</width>
    <height>264</height>
    <texture>common_grey.png</texture>
    <colordiffuse>75000000</colordiffuse>
  </control>
  <control type="group">
    <posx>820</posx>
    <visible>Player.HasAudio</visible>
    <animation effect="slide" start="0,0" end="140,0" time="800" delay="3000" tween="sine" easing="inout" condition="Player.HasAudio">Conditional</animation>
    <animation effect="slide" end="-140,0" time="800" tween="sine" easing="inout" condition="Skin.HasSetting(noviscdart)">Conditional</animation>
    <animation effect="fade" start="100" end="0,0" time="300" delay="500" condition="Skin.HasSetting(noviscdart)">Conditional</animation>
  <control type="image">
    <animation effect="rotate" end="-360" center="auto" time="4000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
    <posx>0</posx>
    <posy>-20</posy>
    <width>350</width>
    <height>264</height>
    <aligny>top</aligny>
    <texture background="true">cdart.png</texture>
    <aspectratio align="bottom">keep</aspectratio>
  </control>
  <control type="image">
    <animation effect="rotate" end="-360" center="auto" time="4000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
    <posx>0</posx>
    <posy>-20</posy>
    <width>350</width>
    <height>264</height>
    <aligny>top</aligny>
    <texture background="true" diffuse="cdart_diffuse.png">$INFO[Player.FolderPath]cdart.png</texture>
    <aspectratio align="bottom">keep</aspectratio>
  </control>
  </control>
  <control type="image">
    <posx>890</posx>
