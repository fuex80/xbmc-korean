<!-- Aeon MQ 4 -->

<window id="2006">
  <allowoverlay>no</allowoverlay>
  <onload condition="System.HasAddon(script.artistslideshow)">RunScript(script.artistslideshow)</onload>
  <onload condition="Skin.HasSetting(lyrics_on)">RunScript($INFO[Skin.String(LyricScript_Path)])</onload>
	<controls>
	<control type="visualisation" id="2">
    <include>FullScreenDimensions</include>
    <animation effect="fade" start="0" end="100" time="400">Visible</animation>
    <animation effect="fade" start="100" end="0" time="200">Hidden</animation>
    <visible>[StringCompare(Visualisation.Name,milkdrop) | StringCompare(Visualisation.Name,projectm)] + !Skin.HasSetting(vis_fanartbg)</visible>
  </control>
  <control type="image"><!-- Fanart -->
    <include>FullScreenDimensions</include>
		<timeperimage>6000</timeperimage>
		<randomize>true</randomize>
		<fadetime>FanartCrossFadeTime</fadetime>
    <texture background="true" fallback="special://skin/backgrounds/default.jpg">$INFO[MusicPlayer.Property(Fanart_image)]</texture>
    <animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(visanimation_panscan)">Conditional</animation>
    <animation effect="slide" start="-10,-10" end="10,10" time="5000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(visanimation_panscan)">Conditional</animation>
    <animation effect="fade" start="0" end="100" time="400">Visible</animation>
    <animation effect="fade" start="100" end="0" time="200">Hidden</animation>
    <animation effect="fade" start="100" end="30" time="0" condition="[StringCompare(Visualisation.Name,milkdrop) | StringCompare(Visualisation.Name,projectm)] + Skin.HasSetting(vis_fanartvisbg)">Conditional</animation>
    <visible>!Skin.HasSetting(vis_visbg) + ![Skin.HasSetting(extrafanartaudio) + !IsEmpty(Control.GetLabel(556))]</visible>
  </control>
  <control type="multiimage" id="556"><!-- Extra Fanart Music -->
    <include>FullScreenDimensions</include>
		<timeperimage>6000</timeperimage>
		<randomize>true</randomize>
		<fadetime>FanartCrossFadeTime</fadetime>
    <imagepath background="true">$INFO[Skin.String(CustomMusicLogoPath)]$INFO[MusicPlayer.Artist,,/extrafanart/]</imagepath>
    <animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(visanimation_panscan)">Conditional</animation>
    <animation effect="slide" start="-10,-10" end="10,10" time="5000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(visanimation_panscan)">Conditional</animation>
    <animation effect="fade" start="0" end="100" time="400">Visible</animation>
    <animation effect="fade" start="100" end="0" time="200">Hidden</animation>
    <animation effect="fade" start="100" end="30" time="0" condition="[StringCompare(Visualisation.Name,milkdrop) | StringCompare(Visualisation.Name,projectm)] + Skin.HasSetting(vis_fanartvisbg)">Conditional</animation>
    <visible>Skin.HasSetting(extrafanartaudio) + !Skin.HasSetting(vis_visbg)</visible>
  </control>
  <control type="visualisation" id="2">
    <include>FullScreenDimensions</include>
    <animation effect="fade" start="0" end="100" time="400">Visible</animation>
    <animation effect="fade" start="100" end="0" time="200">Hidden</animation>
    <visible>![StringCompare(Visualisation.Name,milkdrop) | StringCompare(Visualisation.Name,projectm) | Skin.HasSetting(vis_fanartbg)]</visible>
  </control>
  <control type="group">
    <include>Animation_OpenCloseZoom</include>

  <control type="group" id="555">
    <posx>0</posx>
    <posy>0</posy>
    <width>1280</width>
    <height>48</height>
    <visible>Player.ShowInfo + ![Window.IsActive(120) | Control.IsVisible(998)]</visible>
    <animation type="WindowOpen" reversible="false">
    <effect type="fade" start="20" end="100" time="1000" delay="1000" />
    <effect type="slide" start="0,-48" end="0,0" time="500" delay="1000" tween="cubic" easing="out" />
  </animation>
    <animation type="Visible" reversible="false">
    <effect type="fade" start="20" end="100" time="400" delay="400" />
    <effect type="slide" start="0,-48" end="0,0" time="400" delay="400" tween="cubic" easing="out" />
  </animation>
  <animation type="Hidden" reversible="false">
    <effect type="fade" start="100" end="0" time="400" delay="400" />
    <effect type="slide" start="0,0" end="0,-48" time="400" delay="400" tween="cubic" easing="out" />
  </animation>
  <animation effect="slide" start="0,0" end="0,-48" time="400" tween="cubic" easing="out" condition="Skin.HasSetting(novisfurniture)">Conditional</animation>
  <control type="image">
    <posx>0</posx>
    <posy>-40</posy>
    <width>1280</width>
    <height>110</height>
    <texture background="true">topmenu_bar.png</texture>
    <colordiffuse>$VAR[value_texturecolors]</colordiffuse>
    <animation effect="fade" end="85" condition="true">Conditional</animation>
    <visible>Player.HasAudio</visible>
  </control>
  <control type="label">
    <posx>20</posx>
    <posy>-6</posy>
    <width>600</width>
    <height>48</height>
    <aligny>center</aligny>
    <font>Font_OSDCodecInfo</font>
    <textcolor>c0FFFFFF</textcolor>
    <label>$LOCALIZE[31332]: $INFO[MusicPlayer.PlayListLength]</label>
  </control>
  <control type="label">
    <posx>1260</posx>
    <posy>-6</posy>
    <width>600</width>
    <height>48</height>
    <align>right</align>
    <aligny>center</aligny>
    <font>Font_OSDCodecInfo</font>
    <textcolor>c0FFFFFF</textcolor>
    <label>$LOCALIZE[31309]: $INFO[MusicPlayer.PlayListPosition]</label>
  </control>
  </control>
  
  <!-- Now Player Group -->
  <control type="group">
    <posx>0</posx>
    <posy>775</posy>
    <animation effect="slide" start="0,0" end="-400,0" time="400" tween="cubic" easing="inout" condition="IsEmpty(Window(Visualisation).Property(ArtistSlideshow))">Conditional</animation>
    <animation effect="slide" start="0,0" end="0,270" time="400" tween="cubic" easing="inout" condition="Window.IsVisible(120)">Conditional</animation>
    <animation effect="slide" start="0,0" end="0,300" time="700" tween="cubic" easing="out" condition="Skin.HasSetting(novisfurniture)">Conditional</animation>
    <animation effect="slide" start="0,0" end="-900,0" time="400" tween="cubic" easing="inout" condition="Skin.HasSetting(furniture_cdart)">Conditional</animation>
    <animation effect="slide" start="0,720" end="0,-300" time="700" tween="cubic" easing="out" delay="400">WindowOpen</animation>
    <animation effect="slide" start="0,-300" end="0,0" time="400" tween="cubic" easing="in" delay="400">WindowClose</animation>
    <animation effect="slide" start="0,0" end="0,-28" time="700" tween="cubic" easing="out" delay="400" condition="!IsEmpty(MusicPlayer.offset(1).Artist)">Conditional</animation>
	<control type="image">
    <posx>550</posx>
    <posy>75</posy>
    <width>200</width>
    <height>80</height>
    <texture fallback="flags/music/genre/genre.png" background="true">$INFO[Skin.String(CustomMusicLogoPath)]$INFO[MusicPlayer.Artist,,/logo.png]</texture>
    <fadetime>300</fadetime>
    <aspectratio align="center">keep</aspectratio>
    <animation effect="fade" end="60" condition="true">Conditional</animation>
  </control>
	<control type="image">
    <posx>0</posx>
    <posy>-27</posy>
