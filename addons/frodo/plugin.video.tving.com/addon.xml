<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.tving.com"
       name="tving"
       version="0.2.0"
       provider-name="XBMC-Korea">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.xbmcswift2" version="1.1.1"/>
    <import addon="script.module.simplejson" version="2.0.10"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">tving</summary>
    <summary lang="ko">티빙</summary>
    <description lang="en">Watch Korean movie, clip provided in tving.com</description>
    <description lang="ko">티빙에서 제공하는 영화, 클립등을 볼수 있습니다</description>
    <platform>all</platform>
  </extension>
</addon>
