<window type="dialog" id="400">
<defaultcontrol always="true">218</defaultcontrol>

<visible>Player.HasMedia + Window.IsActive(PlayerControls) + !Window.IsActive(FullscreenVideo)</visible>
  
  <coordinates>
	<system>1</system>
	<posx>20</posx>
	<posy>485</posy>
</coordinates>
	
<controls>
  
  <control type="group">
    <include>SlideFromBottom</include>
    <include>OSDBack</include>
    <control type="label" id="1">
      <description>Label</description>
      <posx>10</posx>
      <posy>5</posy>
      <width>530</width>
      <height>30</height>
      <align>left</align>
      <aligny>middle</aligny>
      <font>20BdFont</font>
      <label>$INFO[VideoPlayer.Title]</label>
      <textcolor>FocusedTextColor</textcolor>
      <scroll>true</scroll>
      <visible>IsEmpty(VideoPlayer.Title) | IsEmpty(MusicPlayer.Title)</visible>
    </control>
    <control type="label" id="1">
      <description>Label</description>
      <posx>10</posx>
      <posy>5</posy>
      <width>590</width>
      <height>30</height>
      <align>left</align>
      <aligny>middle</aligny>
      <font>20BdFont</font>
      <label>$INFO[VideoPlayer.Title]</label>
      <textcolor>FocusedTextColor</textcolor>
      <scroll>true</scroll>
    </control>
    <control type="label" id="1">
      <description>Label</description>
      <posx>10</posx>
      <posy>5</posy>
      <width>590</width>
      <height>30</height>
      <align>left</align>
      <aligny>middle</aligny>
      <font>20BdFont</font>
      <label>$INFO[MusicPlayer.Title]</label>
      <textcolor>FocusedTextColor</textcolor>
      <scroll>true</scroll>
    </control>
    
    <control type="button" id="215">
      <description>Prev Track button</description>
      <posx>10</posx>
      <posy>40</posy>
      <width>101</width>
      <font>18BdFont</font>
      <label>$LOCALIZE[31040]</label>
      <onclick>XBMC.PlayerControl(Previous)</onclick>
      <onleft>220</onleft>
      <onright>216</onright>
      <onup>405</onup>
      <ondown>405</ondown>
    </control>
    <control type="button" id="216">
      <description>Rewind button</description>
      <posx>121</posx>
      <posy>40</posy>
      <width>101</width>
      <font>18BdFont</font>
      <label>$LOCALIZE[31041]</label>
      <onclick>XBMC.PlayerControl(Rewind)</onclick>
      <onleft>215</onleft>
      <onright>217</onright>
      <onup>405</onup>
      <ondown>405</ondown>
    </control>
    <control type="button" id="217">
      <description>Stop button</description>
      <posx>233</posx>
      <posy>40</posy>
      <width>101</width>
      <font>18BdFont</font>
      <label>$LOCALIZE[31042]</label>
      <onclick>XBMC.PlayerControl(Stop)</onclick>
      <onleft>216</onleft>
      <onright>218</onright>
      <onup>405</onup>
      <ondown>405</ondown>
    </control>
    <control type="togglebutton" id="218">
      <description>Play/Pause button</description>
      <posx>345</posx>
      <posy>40</posy>
      <width>101</width>
      <font>18BdFont</font>
      <label>$LOCALIZE[31043]</label>
      <altlabel>$LOCALIZE[31046]</altlabel>
      <usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
      <onclick>XBMC.PlayerControl(Play)</onclick>
      <onleft>217</onleft>
      <onright>219</onright>
      <onup>405</onup>
      <ondown>405</ondown>
    </control>
    <control type="button" id="219">
      <description>Fast Forward button</description>
      <posx>457</posx>
      <posy>40</posy>
      <width>101</width>
      <font>18BdFont</font>
      <label>$LOCALIZE[31044]</label>
      <onclick>XBMC.PlayerControl(Forward)</onclick>
      <onleft>218</onleft>
      <onright>220</onright>
      <onup>405</onup>
      <ondown>405</ondown>
    </control>
    <control type="button" id="220">
      <description>Skip Fwd</description>
      <posx>569</posx>
      <posy>40</posy>
      <width>101</width>
      <font>18BdFont</font>
      <label>$LOCALIZE[31045]</label>
      <onclick>XBMC.PlayerControl(Next)</onclick>
      <onleft>219</onleft>
      <onright>215</onright>
      <onup>405</onup>
      <ondown>405</ondown>
    </control>
    
    <control type="group">
      <posx>610</posx>
      <control type="button" id="405">
        <description>Repeat All button</description>
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <align>left</align>
        <texturefocus>-</texturefocus>
        <texturenofocus>-</texturenofocus>
        <alttexturefocus>-</alttexturefocus>
        <alttexturenofocus>-</alttexturenofocus>
        <usealttexture>-</usealttexture>
        <onclick>XBMC.PlayerControl(Repeat)</onclick>
        <onclick>SetFocus(218)</onclick>
        <onleft>403</onleft>
        <onright>403</onright>
        <ondown>218</ondown>
        <onup>218</onup>
      </control>
      <control type="image">
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <align>left</align>
        <texture>OSDRepeatNF.png</texture>
        <visible>!Playlist.IsRepeat + !Playlist.IsRepeatOne + !Control.HasFocus(405)</visible>
      </control>
      <control type="image">
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <align>left</align>
        <texture>OSDRepeatFo.png</texture>
        <visible>[Playlist.IsRepeat| !Playlist.IsRepeat] + !Playlist.IsRepeatOne + Control.HasFocus(405)</visible>
      </control>
      <control type="image">
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <align>left</align>
        <texture>OSDRepeatSe.png</texture>
        <visible>Playlist.IsRepeat + !Playlist.IsRepeatOne + !Control.HasFocus(405)</visible>
      </control>
      <control type="image">
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <align>left</align>
        <texture>OSDRepeatOneNF.png</texture>
        <visible>Playlist.IsRepeatOne + !Control.HasFocus(405)</visible>
      </control>
      <control type="image">
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <align>left</align>
        <texture>OSDRepeatOneFo.png</texture>
        <visible>Playlist.IsRepeatOne + Control.HasFocus(405)</visible>
      </control>
      <control type="image">
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <align>left</align>
        <texture>OSDRepeatOneSe.png</texture>
        <visible>Playlist.IsRepeatOne + !Control.HasFocus(405)</visible>
      </control>
      <control type="togglebutton" id="403">
        <description>Random button</description>
        <posx>30</posx>
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <align>left</align>
        <texturefocus>OSDRandomFo.png</texturefocus>
        <texturenofocus>OSDRandomNF.png</texturenofocus>
        <alttexturefocus>OSDRandomFo.png</alttexturefocus>
        <alttexturenofocus>OSDRandomSe.png</alttexturenofocus>
        <usealttexture>Playlist.IsRandom</usealttexture>
        <pulseonselect>false</pulseonselect>
        <onclick>XBMC.PlayerControl(Random)</onclick>
        <onclick>SetFocus(218)</onclick>
        <onleft>405</onleft>
        <onright>405</onright>
        <ondown>218</ondown>
        <onup>218</onup>
      </control>
    </control>
  </control>

</controls>
</window>
