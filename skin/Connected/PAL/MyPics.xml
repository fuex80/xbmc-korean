      <description>Photos Window Image</description>
      <posx>-15</posx>
      <posy>510</posy>
      <width>80</width>
      <height>80</height>
      <aspectratio align="left">keep</aspectratio>
      <texture>HomePhotos.png</texture>
      <include>ContentImageFade</include>
    </control>
    <control type="label">
      <description>Photos Window Title</description>
      <posx>25</posx>
