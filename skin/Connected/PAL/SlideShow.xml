<window id="2007">
<defaultcontrol>2</defaultcontrol>
<allowoverlay>yes</allowoverlay>
	
<controls>
		
		<!-- Media Info -->
		<control type="group">
			<visible>Player.ShowInfo</visible>
      <control type="group">
        <posx>300</posx>
        <posy>15</posy>
        <include>SlideFromRight</include>
        <include>NowPlayingBack</include>
        <visible>Player.HasAudio</visible>
        <control type="image">
          <description>Header Back</description>
          <width>400</width>
          <height>45</height>
          <align>left</align>
          <texture>ButtonNF.png</texture>
        </control>
        <control type="image" id="0">
          <description>album cover</description>
          <posx>10</posx>
          <posy>55</posy>
          <width>85</width>
          <height>85</height>
          <texture>DefaultAlbumCover.png</texture>
          <info>MusicPlayer.Cover</info>
          <aspectratio align="left" aligny="top">keep</aspectratio>
          <bordertexture border="14">ButtonNF.png</bordertexture>
          <bordersize>5</bordersize>
        </control>
        <control type="label" id="1">
          <description>Current Time Label</description>
          <posx>390</posx>
          <width>100</width>
          <height>45</height>
          <align>right</align>
          <aligny>center</aligny>
          <label>$INFO[System.Time]</label>
          <font>22BdFont</font>
          <textcolor>FocusedTextColor</textcolor>
          <visible>!Skin.HasSetting(NowPlayingTime)</visible>
        </control>
        <control type="label" id="401">
          <description>Header Label</description>
          <posx>10</posx>
          <posy>0</posy>
          <width>270</width>
          <height>45</height>
          <align>left</align>
          <aligny>center</aligny>
          <label>$INFO[MusicPlayer.Album] [COLOR=FocusedTextColor]$INFO[MusicPlayer.Year][/COLOR]</label>
          <font>22BdFont</font>
          <textcolor>FocusedTextColor</textcolor>
          <visible>!IsEmpty(MusicPlayer.Album) + !Skin.HasSetting(NowPlayingTime)</visible>
        </control>
        <control type="label" id="401">
          <description>Header Label</description>
          <posx>10</posx>
          <posy>0</posy>
          <width>270</width>
          <height>45</height>
          <align>left</align>
          <aligny>center</aligny>
          <label>$INFO[MusicPlayer.Label] [COLOR=FocusedTextColor]$INFO[MusicPlayer.Year][/COLOR]</label>
          <font>22BdFont</font>
          <textcolor>FocusedTextColor</textcolor>
          <visible>IsEmpty(MusicPlayer.Album) + !Skin.HasSetting(NowPlayingTime)</visible>
        </control>
        <control type="label" id="401">
          <description>Header Label</description>
          <posx>10</posx>
          <posy>0</posy>
          <width>380</width>
          <height>45</height>
          <align>left</align>
          <aligny>center</aligny>
          <label>$INFO[MusicPlayer.Album] [COLOR=FocusedTextColor]$INFO[MusicPlayer.Year][/COLOR]</label>
          <font>22BdFont</font>
          <textcolor>FocusedTextColor</textcolor>
          <visible>Skin.HasSetting(NowPlayingTime)</visible>
        </control>
        <control type="label" id="401">
          <description>Header Label</description>
          <posx>10</posx>
          <posy>0</posy>
          <width>380</width>
          <height>45</height>
          <align>left</align>
          <aligny>center</aligny>
          <label>$INFO[MusicPlayer.Label] [COLOR=FocusedTextColor]$INFO[MusicPlayer.Year][/COLOR]</label>
          <font>22BdFont</font>
          <textcolor>FocusedTextColor</textcolor>
          <visible>IsEmpty(MusicPlayer.Album) + Skin.HasSetting(NowPlayingTime)</visible>
        </control>
        <control type="label" id="0">
          <description>artist</description>
          <posx>105</posx>
          <posy>55</posy>
          <width>285</width>
          <height>30</height>
          <align>left</align>
          <label>$INFO[MusicPlayer.Artist]</label>
          <scroll>true</scroll>
          <font>18BdFont</font>
          <textcolor>DefaultTextColor</textcolor>
        </control>
        <control type="label" id="0">
          <description>track title</description>
          <posx>105</posx>
          <posy>85</posy>
          <width>300</width>
          <height>30</height>
          <align>left</align>
          <label>$INFO[MusicPlayer.Title]</label>
          <scroll>true</scroll>
          <font>18BdFont</font>
          <textcolor>DefaultTextColor</textcolor>
        </control>
        <control type="progress" id="1">
          <description>Progressbar</description>
          <posx>105</posx>
          <posy>127</posy>
          <width>145</width>
          <info>Player.Progress</info>
        </control>
        <control type="label" id="1">
          <description>Time Remaining</description>
          <posx>390</posx>
          <posy>115</posy>
          <width>200</width>
          <height>30</height>
          <align>right</align>
          <label>$INFO[VideoPlayer.Time]$INFO[VideoPlayer.Duration, / ]</label>
          <font>18BdFont</font>
          <textcolor>DefaultTextColor</textcolor>
          <scroll>true</scroll>
        </control>
      </control>
		</control>
	</controls>
	
</window>