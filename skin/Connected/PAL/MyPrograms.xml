      <scroll>true</scroll>
      <font>22BdFont</font>
      <textcolor>FocusedTextColor</textcolor>
      <include>DefaultFade</include>
    </control>

    <control type="group" id="9000">
      <posx>208</posx>
      <posy>128</posy>
