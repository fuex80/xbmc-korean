      </control>
      <control type="group">
        <include>OptionBack3-2</include>
        <visible>ControlGroup(9002).HasFocus</visible>
      </control>
      <control type="group">
        <include>OptionBack3-1</include>
        <visible>ControlGroup(9003).HasFocus</visible>
      </control>

      <include>DefaultViewOptions</include>

      <control type="group" id="9003">
        <posx>0</posx>
        <posy>275</posy>
        <animation effect="slide" time="10" end="0,-120" condition="ControlGroup(9002).HasFocus">Conditional</animation>
        <animation effect="slide" time="10" end="0,-185" condition="ControlGroup(9003).HasFocus">Conditional</animation>
        <control type="button" id="2021">
          <description>Game Saves Header</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>304</width>
          <height>45</height>
          <align>left</align>
          <aligny>center</aligny>
          <label>-</label>
          <font>22BdFont</font>
          <textcolor>DefaultTextColor</textcolor>
          <focusedcolor>DefaultTextColor</focusedcolor>
          <disabledcolor>DisabledTextColor</disabledcolor>
          <texturefocus>ButtonNF.png</texturefocus>
          <texturenofocus>ButtonNF.png</texturenofocus>
          <textoffsetx>35</textoffsetx>
          <pulseonselect>false</pulseonselect>
          <onfocus>SetFocus(98)</onfocus>
          <onleft>51</onleft>
          <onright>51</onright>
          <onup>-</onup>
          <ondown>-</ondown>
        </control>
        <control type="label">
          <description>Gamesaves Header Label</description>
          <posx>35</posx>
          <posy>0</posy>
          <width>268</width>
          <height>45</height>
          <align>left</align>
          <aligny>center</aligny>
          <label>$LOCALIZE[20315]</label>
          <font>22BdFont</font>
          <textcolor>FocusedTextColor</textcolor>
          <visible>ControlGroup(9003).HasFocus</visible>
        </control>
        <control type="label">
          <description>Gamesaves Header Label</description>
          <posx>35</posx>
          <posy>0</posy>
          <width>268</width>
          <height>45</height>
          <align>left</align>
          <aligny>center</aligny>
          <label>$LOCALIZE[20315]</label>
          <font>22BdFont</font>
          <textcolor>DefaultTextColor</textcolor>
          <visible>!ControlGroup(9003).HasFocus</visible>
        </control>

        <control type="group">
          <animation effect="fade" time="10" delay="120" end="100" condition="ControlGroup(9003).HasFocus">Conditional</animation>
          <control type="button" id="98">
            <description>Gamesaves button</description>
            <posx>0</posx>
            <posy>45</posy>
            <width>285</width>
            <height>30</height>
            <align>left</align>
            <aligny>center</aligny>
            <label>$LOCALIZE[20315]</label>
            <font>18BdFont</font>
            <textcolor>DefaultTextColor</textcolor>
            <focusedcolor>FocusedTextColor</focusedcolor>
