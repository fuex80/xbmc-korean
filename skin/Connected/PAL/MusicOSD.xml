<window id="120">
<defaultcontrol always="true">218</defaultcontrol>
  
<controls>

  <control type="group">
    <posx>20</posx>
    <posy>485</posy>
    <include>SlideFromBottom</include>
    <include>OSDBack</include>
    <visible>!Window.IsActive(121) + !Window.IsVisible(122)</visible>
    <control type="label">
      <description>Label</description>
      <posx>10</posx>
      <posy>10</posy>
      <width>520</width>
      <height>30</height>
      <align>left</align>
      <aligny>middle</aligny>
      <font>20BdFont</font>
      <label>$INFO[VideoPlayer.Label]</label>
      <textcolor>FocusedTextColor</textcolor>
      <scroll>true</scroll>
      <visible>IsEmpty(MusicPlayer.Title)</visible>
    </control>
    <control type="label">
      <description>Label</description>
      <posx>10</posx>
      <posy>10</posy>
      <width>520</width>
      <height>30</height>
      <align>left</align>
      <aligny>middle</aligny>
      <font>20BdFont</font>
      <label>$INFO[MusicPlayer.Title]</label>
      <textcolor>FocusedTextColor</textcolor>
      <scroll>true</scroll>
    </control>

    <control type="group" id="3000">
      <control type="button" id="215">
        <description>Prev Track button</description>
        <posx>10</posx>
        <posy>40</posy>
        <width>101</width>
        <font>18BdFont</font>
        <label>$LOCALIZE[31064]</label>
        <onclick>XBMC.PlayerControl(Previous)</onclick>
        <onleft>220</onleft>
        <onright>216</onright>
        <onup>3001</onup>
        <ondown>3001</ondown>
      </control>
      <control type="button" id="216">
        <description>Rewind button</description>
        <posx>121</posx>
        <posy>40</posy>
        <width>101</width>
        <font>18BdFont</font>
        <label>$LOCALIZE[31065]</label>
        <onclick>XBMC.PlayerControl(Rewind)</onclick>
        <onleft>215</onleft>
        <onright>217</onright>
        <onup>3001</onup>
        <ondown>3001</ondown>
      </control>
      <control type="button" id="217">
        <description>Stop button</description>
        <posx>233</posx>
        <posy>40</posy>
        <width>101</width>
        <font>18BdFont</font>
        <label>$LOCALIZE[31066]</label>
        <onclick>XBMC.PlayerControl(Stop)</onclick>
        <onleft>216</onleft>
        <onright>218</onright>
        <onup>3001</onup>
        <ondown>3001</ondown>
      </control>
      <control type="togglebutton" id="218">
        <description>Play/Pause button</description>
        <posx>345</posx>
        <posy>40</posy>
        <width>101</width>
        <font>18BdFont</font>
        <label>$LOCALIZE[31067]</label>
        <altlabel>$LOCALIZE[31068]</altlabel>
        <usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
        <onclick>XBMC.PlayerControl(Play)</onclick>
        <onleft>217</onleft>
        <onright>219</onright>
        <onup>3001</onup>
        <ondown>3001</ondown>
      </control>
      <control type="button" id="219">
        <description>Fast Forward button</description>
        <posx>457</posx>
        <posy>40</posy>
        <width>101</width>
        <font>18BdFont</font>
        <label>$LOCALIZE[31069]</label>
        <onclick>XBMC.PlayerControl(Forward)</onclick>
        <onleft>218</onleft>
        <onright>220</onright>
        <onup>3001</onup>
        <ondown>3001</ondown>
      </control>
      <control type="button" id="220">
        <description>Skip Fwd</description>
        <posx>569</posx>
        <posy>40</posy>
        <width>101</width>
        <font>18BdFont</font>
        <label>$LOCALIZE[31070]</label>
        <onclick>XBMC.PlayerControl(Next)</onclick>
        <onleft>219</onleft>
        <onright>215</onright>
        <onup>3001</onup>
        <ondown>3001</ondown>
      </control>
    </control>

    <control type="group" id="3001">
      <posx>505</posx>
      <control type="button" id="602">
        <description>Record button</description>
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <font>-</font>
        <label>-</label>
        <texturefocus>OSDRecordFo.png</texturefocus>
        <texturenofocus>OSDRecordNF.png</texturenofocus>
        <onclick>XBMC.PlayerControl(Record)</onclick>
        <onleft>605</onleft>
        <onright>603</onright>
        <ondown>3000</ondown>
        <onup>3000</onup>
        <visible>Player.CanRecord</visible>
      </control>
      <control type="button" id="603">
        <description>Playlist button</description>
        <posx>35</posx>
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <font>-</font>
        <label>-</label>
        <texturefocus>OSDPlaylistFo.png</texturefocus>
        <texturenofocus>OSDPlaylistNF.png</texturenofocus>
        <onclick>XBMC.ActivateWindow(500)</onclick>
        <onleft>602</onleft>
        <onright>500</onright>
        <ondown>3000</ondown>
        <onup>3000</onup>
      </control>
      <control type="button" id="500">
        <description>Vis Select</description>
        <posx>70</posx>
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <font>18BdFont</font>
        <label>-</label>
        <texturefocus>OSDVisualSelFo.png</texturefocus>
        <texturenofocus>OSDVisualSelNF.png</texturenofocus>
        <onleft>603</onleft>
        <onright>604</onright>
        <ondown>3000</ondown>
        <onup>3000</onup>
      </control>
      <control type="button" id="604">
        <description>Vis Settings</description>
        <posx>105</posx>
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <font>-</font>
        <label>-</label>
        <texturefocus>OSDVisualSetFo.png</texturefocus>
        <texturenofocus>OSDVisualSetNF.png</texturenofocus>
        <onclick>XBMC.ActivateWindow(121)</onclick>
        <onleft>500</onleft>
        <onright>605</onright>
        <ondown>3000</ondown>
        <onup>3000</onup>
      </control>
      <control type="button" id="605">
        <description>Vis Presets</description>
        <posx>140</posx>
        <posy>10</posy>
        <width>25</width>
        <height>25</height>
        <font>-</font>
        <label>-</label>
        <texturefocus>OSDVisualPreFo.png</texturefocus>
        <texturenofocus>OSDVisualPreNF.png</texturenofocus>
        <onclick>XBMC.ActivateWindow(122)</onclick>
        <onleft>604</onleft>
        <onright>602</onright>
        <ondown>3000</ondown>
        <onup>3000</onup>
      </control>
    </control>
  </control>

  <control type="selectbutton" id="503">
    <description>Vis Select Button</description>
    <posx>410</posx>
    <posy>420</posy>
    <width>300</width>
    <height>60</height>
    <font>16BdFont</font>
    <texturefocus>-</texturefocus>
    <texturenofocus>-</texturenofocus>
    <onleft>500</onleft>
    <onright>500</onright>
    <ondown>500</ondown>
    <onup>500</onup>
  </control>

</controls>
</window>