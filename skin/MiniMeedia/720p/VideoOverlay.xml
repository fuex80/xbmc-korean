<window id="2004">
  <defaultcontrol>2</defaultcontrol>

  <controls>

    <control type="group" id="1">
      <posx>0</posx>
      <posy>50</posy>
      <animation effect="slide" time="300" delay="300" tween="circle" easing="out" start="-350,0" end="0,0">WindowOpen</animation>
      <animation effect="slide" time="300" tween="circle" easing="out" start="-350,0" end="0,0">Visible</animation>
      <animation effect="slide" time="200" tween="circle" easing="in" start="0,0" end="-350,0">WindowClose</animation>
      <animation effect="slide" time="200" tween="circle" easing="in" start="0,0" end="-350,0">Hidden</animation>

      <control type="image" id="1">
        <description>Panel background</description>
        <posx>-10</posx>
        <posy>-10</posy>
        <width>314</width>
        <height>236</height>
        <include>OverlayDarkArea</include>
      </control>

      <control type="group" id="1">
        <posx>10</posx>
        <posy>0</posy>

        <control type="videowindow" id="1">
          <description>Video Preview</description>
          <width>284</width>
          <height>160</height>
          <aspectratio>keep</aspectratio>
          <align>center</align>
          <aligny>center</aligny>
        </control>

        <control type="label" id="1">
          <description>Title</description>
          <posy>168</posy>
          <width>284</width>
          <font>SmallTinyTitleFont</font>
          <info>VideoPlayer.Title</info>
        </control>

        <control type="group" id="1">
          <posy>186</posy>

          <control type="progress" id="1">
            <description>Progress Bar</description>
            <posx>-6</posx>
            <width>296</width>
            <info>Player.Progress</info>
          </control>

          <control type="group" id="1">
            <posy>18</posy>

            <control type="label" id="1">
              <description>Elapsed Time Label</description>
              <font>SmallerDefaultFont</font>
              <info>Player.Time</info>
              <textcolor>Unfocused</textcolor>
              <width>140</width>
              <visible>!Player.Seeking</visible>
            </control>

            <control type="label" id="1">
              <description>Duration Label</description>
              <posx>284</posx>
              <info>Player.Duration</info>
              <font>SmallerDefaultFont</font>
              <textcolor>Unfocused</textcolor>
              <align>right</align>
              <width>140</width>
            </control>
          </control>
        </control>
      </control>
    </control>

  </controls>
</window>
