<window type="dialog" id="134">
	
	<defaultcontrol always="true">450</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<controls>

<control type="group">
	 <control>
            <type>image</type>
            <posx>-205</posx>
            <posy>0</posy>
            <width>210</width>
            <height>576</height>
            <texture>Left Curtain Panel.png</texture>
            <visible>!Skin.HasSetting(Wallpaper)</visible>
	        <visible>!Skin.HasSetting(Default Wallpaper)</visible>
			 </control>
				
		<control>
            <type>image</type>
            <posx>-205</posx>
            <posy>0</posy>
            <width>210</width>
            <height>576</height>
            <texture>Black.png</texture>
            </control>

            
		
		<control type="list" id="450">

			<posx>-207</posx>
            <posy>45</posy>
			<width>215</width>
            <height>380</height>
			<font>font64</font>
			<onleft>450</onleft>
			<onright>450</onright>
			<onup>450</onup>
			<ondown>450</ondown>
			<itemlayout height="20">
					<control type="label">
					<posx>100</posx>
					<posy>0</posy>
					<width>200</width>
					<font>font64</font>
					<align>center</align>
                    <info>ListItem.Label</info>
					<selectedcolor>white</selectedcolor>
					</control>

				
				</itemlayout>

			<focusedlayout height="20">
				<control type="image">
					<posx>5</posx>
					<posy>0</posy>
					<width>205</width>
					<height>20</height>
                    <align>center</align>
                    <aligny>center</aligny>
					<texture>list-focus1.png</texture>
					</control>

				<control type="label">
					<posx>100</posx>
					<posy>0</posy>
					<width>200</width>
					<height>20</height>
					<font>font64</font>
					<align>center</align>
					<include>listselectedcolor</include>
					<info>ListItem.Label</info>
					<selectedcolor>white</selectedcolor>
                  	</control>
				
			</focusedlayout>
		</control>
     
	 <control>
		<description>Time</description>
 		<type>image</type>
		<posx>-205</posx>
        <posy>425</posy>
        <width>210</width>
		<height>40</height>
		<texture>homebutton-horizontal-nofocus.png</texture>
		<align>center</align>
		</control>
	<control>

		<description>Time</description>
 		<type>label</type>
		<posx>-205</posx>
        <posy>425</posy>
        <textwidth>125</textwidth>
		<width>200</width>
		<height>40</height>
		<label>Date</label>
		<info>System.Time</info>
        <align>center</align>
		<aligny>center</aligny>
		<font>special16</font>
		<textcolor>white</textcolor>
		</control>

         <animation effect="slide" end="203,0" delay="50" tween="cubic" time="400">WindowOpen</animation>
         <animation effect="slide" start="203,0" end="-203,0" delay="50" tween="cubic" time="600">WindowClose</animation>
		 </control>
	</controls>



</window>