<control type="group" id="3">

<visible>Player.ShowInfo</visible>

<control>
<description>Media Info Background Image</description>
<type>image</type>
<id>1</id>
<posx>-10</posx>
<posy>445</posy>
<width>740</width>
<height>131</height>
<texture>OSD.png</texture>
</control>


<control type="button" id ="2">
<description>Plot Info</description>
<label>-</label>
<texturenofocus>-</texturenofocus>
<texturefocus>-</texturefocus>
<onleft></onleft>
<onright></onright>
<onup>2</onup>
<ondown>2</ondown>
<visible>!IsEmpty(VideoPlayer.Plot)</visible>
<visible>!Window.IsActive(VideoOSD)</visible>
</control>


<control type="textbox">
<description>Textbox</description>
<id>1</id>
<posx>120</posx>
<posy>480</posy>
<width>500</width>
<height>75</height>
<font>font13</font>
<label>$INFO[VideoPlayer.Plot]</label>
<align>justify</align>
<pagecontrol>91</pagecontrol>
<autoscroll time="4000" delay="5000" repeat="15000"></autoscroll>
<align>justify</align>
<visible>Control.HasFocus(2)</visible>
<include>media-infopanel-effect</include>
<visible>!Window.IsActive(VideoOSD)</visible>
</control>


<control>
<description>Cover Image</description>
<type>image</type>
<id>1</id>
<posx>15</posx>
<posy>450</posy>
<width>100</width>
<height>120</height>
<aligny>bottom</aligny>
<info>VideoPlayer.Cover</info>
<aspectratio>keep</aspectratio>
<include>media-infopanel-effect</include>
<visible>videoplayer.content(Movies)</visible>
</control>

<control>
<description>Cover Image</description>
<type>image</type>
<id>1</id>
<posx>15</posx>
<posy>480</posy>
<width>100</width>
<height>90</height>
<aligny>center</aligny>
<info>VideoPlayer.Cover</info>
<aspectratio>keep</aspectratio>
<include>media-infopanel-effect</include>
<visible>!videoplayer.content(Movies)</visible>
</control>




<control>
<description>System time Label</description>
<type>label</type>
<id>1</id>
<width>70</width>
<posx>690</posx>
<posy>500</posy>
<label>$INFO[System.Time]</label>
<align>right</align>
<font>Heading-M</font>
<visible>videoplayer.content(Movies) | videoplayer.content(episodes) | videoplayer.content(musicvideos) | videoplayer.content(livetv)</visible>
</control>


<control type="label">
<id>1</id>
<description>current_event_name</description>
<width>600</width>
<posx>60</posx>
<posy>450</posy>
<scroll>true</scroll>
<info>VideoPlayer.Title</info>
<align>center</align>
<font>Heading-M</font>
<visible>Player.ShowInfo + Control.HasFocus(2)</visible>
<visible>!Window.IsActive(VideoOSD)</visible>
</control>

<control type="label">
<visible>!videoplayer.content(Movies) + !videoplayer.content(episodes) + !videoplayer.content(musicvideos) + !videoplayer.content(livetv)</visible>
<id>1</id>
